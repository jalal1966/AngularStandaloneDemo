@model AngularStandaloneDemo.Models.Pressure

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Pressure</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MedicalRecordId" class="control-label"></label>
                <select asp-for="MedicalRecordId" class ="form-control" asp-items="ViewBag.MedicalRecordId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SystolicPressure" class="control-label"></label>
                <input asp-for="SystolicPressure" class="form-control" />
                <span asp-validation-for="SystolicPressure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiastolicPressure" class="control-label"></label>
                <input asp-for="DiastolicPressure" class="form-control" />
                <span asp-validation-for="DiastolicPressure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BloodPressureRatio" class="control-label"></label>
                <input asp-for="BloodPressureRatio" class="form-control" />
                <span asp-validation-for="BloodPressureRatio" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsBloodPressureNormal" /> @Html.DisplayNameFor(model => model.IsBloodPressureNormal)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label"></label>
                <input asp-for="CreatedAt" class="form-control" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatedAt" class="control-label"></label>
                <input asp-for="UpdatedAt" class="form-control" />
                <span asp-validation-for="UpdatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
