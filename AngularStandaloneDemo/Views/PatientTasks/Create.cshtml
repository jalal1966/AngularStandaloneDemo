                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsRecurring" /> @Html.DisplayNameFor(model => model.IsRecurring)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="RecurringPattern" class="control-label"></label>
                <input asp-for="RecurringPattern" class="form-control" />
                <span asp-validation-for="RecurringPattern" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
